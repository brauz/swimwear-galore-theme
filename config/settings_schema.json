      {
        "type": "header",
        "content": "Region 1"
      },
      {
        "type": "text",
        "id": "1_region_name",
        "label": "Region 1 Name",
        "info": "Will be shown in region selector."
      },
      {
        "type": "text",
        "id": "1_region_code",
        "label": "Region 1 Code",
        "info": "The internal code for this region e.g. aus or AU or asia-pacific."
