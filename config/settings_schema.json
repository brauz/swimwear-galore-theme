  {
    "name": "Search",
    "settings": [
      {
        "type": "header",
        "content": "Search settings"
      },
      {
        "type": "select",
        "id": "search_integration",
        "label": "Integrate search using",
        "options": [
          {
            "value": "tagalys",
            "label": "Tagalys"
          },
          {
            "value": "shopify",
            "label": "Shopify"
          }
        ],
        "default": "tagalys"
      },
      {
        "type": "checkbox",
        "id": "enable_instant_search",
        "label": "Enable Instant Search",
        "default": true
      },
      {
        "type": "header",
        "content": "Instant search settings",
        "info": "Select which search results you want to display for quick search"
      },
      {
        "type": "checkbox",
        "id": "search_display_suggestions",
        "label": "Suggestions",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "search_display_products",
        "label": "Products",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "search_display_collections",
        "label": "Collections",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "search_display_pages",
        "label": "Pages",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "search_display_articles",
        "label": "Articles",
        "default": true
      },
      {
        "type": "range",
        "id": "search_header_display_results",
        "label": "Max results per category",
        "min": 1,
        "max": 10,
        "default": 4
      },
      {
        "type": "select",
        "id": "search_unavailable_products",
        "label": "Display unavailable products",
        "options": [
          {
            "label": "Show",
            "value": "show"
          },
          {
            "label": "Hide",
            "value": "hide"
          },
          {
            "label": "Display last",
            "value": "last"
          }
        ],
        "default": "last"
      },
      {
        "type": "header",
        "content": "Search Fields",
        "info": "For the best search experience, you should use as few fields as possible."
      },
      {
        "type": "checkbox",
        "id": "search_author",
        "label": "Author",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "search_body",
        "label": "Body",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "search_product_type",
        "label": "Product Type",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "search_tag",
        "label": "Tag",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "search_title",
        "label": "Title",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "search_variants_barcode",
        "label": "Variants Barcode",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "search_variants_sku",
        "label": "Variants SKU",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "search_variants_title",
        "label": "Variants Title",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "search_vendor",
        "label": "Vendor",
        "default": true
      },
      {
        "type": "header",
        "content": "Custom Search Suggestions"
      },
      {
        "type": "checkbox",
        "id": "show_custom_search_suggestions",
        "label": "Show custom search suggestions",
        "default": true
      },
      {
        "type": "text",
        "id": "search_suggestions_list",
        "label": "Keyword Suggestion List",
        "info": "Comma-separated list of search terms eg. Dresses, Skirts"
      },
      {
        "type": "collection",
        "id": "search_featured_products",
        "label": "Featured Products",
        "info": "Used if search is integrating using Shopify."
      },
      {
        "type": "text",
        "id": "tagalys_featured_products_widget_id",
        "label": "Featured Products Widget ID",
        "info": "Used if search is integrating using Tagalys."
      }
    ]
  },
